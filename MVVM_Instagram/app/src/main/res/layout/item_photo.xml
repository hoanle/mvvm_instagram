<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="instagramPhotoModel"
            type="hoanle.mvvm_instagram.viewmodel.InstagramPhotoViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/item_photo"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/image_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:imageUrl="@{instagramPhotoModel.photo.profileUrl}" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/image_profile"
            android:text="@{instagramPhotoModel.photo.username}" />
    </LinearLayout>

</layout>